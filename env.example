# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# API Keys
WEATHER_API_KEY=your_weatherapi_key_here

# Environment
NODE_ENV=development
STAGE=dev

# Logging
LOG_LEVEL=info

# DynamoDB
DYNAMODB_TABLE=softtek-rimac-api-dev

# Database Engine selector: dynamo | mysql
DB_ENGINE=dynamo

# MySQL Configuration (used when DB_ENGINE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=softtek_rimac
MYSQL_TABLE=items

# Cache
CACHE_TTL=1800

# X-Ray
AWS_XRAY_DAEMON_ADDRESS=127.0.0.1:2000 